// As simple as it gets: 1-core system with 2 short processes

//bench1="Simple"
//bench2="Simple1"
//echo $bench1

sys = {
    cores = {
        simpleCore = {
            type = "OOO";
            dcache = "l1d";
            icache = "l1i";
        };
    };

    lineSize = 64;

    caches = {
        l1d = {
            size = 32768;
        };
        l1i = {
            size = 32768;
        };
        l2 = {
            caches = 1;
            size = 2097152;
            children = "l1i|l1d";  // interleave
        };
	l3 = {
	    caches = 1;
	    size = 2097152;
  	    children = "l2";				
	}
    };
};

sim = {
    phaseLength = 10000;
   // attachDebugger = True;
    schedQuantum = 50;  // switch threads frequently
    procStatsFilter = "l1.*|l2.*";
    sim_name = "blackscholes";
};

process0 = {
    use_pinplay = false;
    pinplay_arg_1 = "";
    pinplay_arg_2 = "";
    command ="/home/menglin/parsec-3.0/pkgs/kernels/canneal/inst/amd64-linux.gcc/bin/canneal 1 5 100 /home/menglin/parsec-3.0/pkgs/kernels/canneal/run/10.nets 1";
};
